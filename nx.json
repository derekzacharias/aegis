{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "npmScope": "compliance",
  "affected": {
    "defaultBase": "main"
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["{options.outputPath}"]
    },
    "lint": {
      "inputs": ["default", "{workspaceRoot}/.eslintrc.json"]
    },
    "test": {
      "inputs": [
        "default",
        "{workspaceRoot}/jest.preset.js",
        "{workspaceRoot}/tools/testing/**/*",
        "{workspaceRoot}/types/**/*.d.ts"
      ]
    }
  },
  "defaultProject": "web",
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "libs"
  }
}
